<% if current_user.favorite_micropost?(micropost) %>
    <%= form_for(current_user.favoritenets.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favoritenets.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
    <% end %>
<% end %>